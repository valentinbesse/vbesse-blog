import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="home-container">
		<section class="hero">
			<img
				src="/paysage-accueil.jpg"
				alt="Un paysage montagnard du haut de l'Ardèche"
				class="hero-image"
			/>
			<h1>Salut, je suis <span class="text-gradient">Valentin</span>.</h1>
			<p class="bio">
				Bienvenue sur mon espace personnel. Je suis un passionné de
				technologies, explorant le développement web moderne. Ici, je
				partage mes découvertes, mes projets et mes réflexions
				techniques.
			</p>

