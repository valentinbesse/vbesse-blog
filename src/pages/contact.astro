---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contactez-moi | vbesse.com">
  <div class="contact-container">
    <h1>Me contacter</h1>
    <p>Une question sur un article, une proposition de projet ou juste envie de dire bonjour ? N'hésitez pas !</p>

    <form action="https://formspree.io/f/mjgeeayp" method="POST" class="contact-form">
      <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" id="name" name="name" required placeholder="Votre nom" />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="votre@email.com" />
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required placeholder="Comment puis-je vous aider ?"></textarea>
      </div>

      <button type="submit" class="button primary">Envoyer le message</button>
    </form>
  </div>
</Layout>

<style>
  .contact-container {
    max-width: 600px;
    margin: 4rem auto;
    padding: 0 1.5rem;
  }

  h1 { font-size: 2.5rem; margin-bottom: 1rem; }
  p { margin-bottom: 2rem; color: var(--text-muted); }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-weight: 600;
    font-size: 0.9rem;
  }

  input, textarea {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid var(--border-color); /* Utilise tes variables existantes */
    border-radius: 8px;
    background: var(--bg-secondary);
    color: var(--text-color);
    font-size: 1rem;
    box-sizing: border-box; /* On garde la bonne leçon d'hier ! */
  }

  input:focus, textarea:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
    border-color: var(--accent-color);
  }

  button {
    cursor: pointer;
    border: none;
    padding: 1rem;
    font-size: 1rem;
    font-weight: bold;
    transition: transform 0.2s ease;
  }

  button:active { transform: scale(0.98); }
</style>