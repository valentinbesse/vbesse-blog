---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contactez-moi | vbesse.com">
  <div class="contact-container">
    <h1>Me contacter</h1>
    <p>Une question sur un article, une proposition de projet ou juste envie de dire bonjour ? N'hésitez pas !</p>

    <form id="contact-form" action="https://formspree.io/f/mjgeeayp" method="POST" class="contact-form">
      <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" id="name" name="name" required placeholder="Votre nom" />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="votre@email.com" />
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required placeholder="Comment puis-je vous aider ?"></textarea>
      </div>

      <button type="submit" id="submit-btn" class="button primary">Envoyer le message</button>
      <input type="hidden" name="_next" value="https://vbesse.com/thanks">
      <p id="form-status" class="status-message"></p>
    </form>
  </div>
</Layout>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const status = document.getElementById("form-status");
  const btn = document.getElementById("submit-btn") as HTMLButtonElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    
    // Feedback visuel pendant l'envoi
    btn.disabled = true;
    btn.textContent = "Envoi en cours...";
    if (status) status.textContent = "";

    const data = new FormData(form);
    
    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: data,
        headers: { 'Accept': 'application/json' }
      });

      if (response.ok) {
        // Succès : Redirection manuelle vers ta page de remerciement
        window.location.href = "/thanks";
      } else {
        const result = await response.json();
        if (Object.hasOwn(result, 'errors')) {
          if (status) status.textContent = result.errors.map((error: any) => error.message).join(", ");
        } else {
          if (status) status.textContent = "Oups ! Une erreur est survenue.";
        }
        btn.disabled = false;
        btn.textContent = "Envoyer le message";
      }
    } catch (error) {
      if (status) status.textContent = "Erreur de connexion. Vérifiez votre réseau.";
      btn.disabled = false;
      btn.textContent = "Envoyer le message";
    }
  });
</script>

<style>
  .contact-container {
    max-width: 600px;
    margin: 4rem auto;
    padding: 0 1.5rem;
  }

  h1 { font-size: 2.5rem; margin-bottom: 1rem; }
  p { margin-bottom: 2rem; color: var(--text-muted); }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-weight: 600;
    font-size: 0.9rem;
  }

  input, textarea {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background: var(--bg-secondary);
    color: var(--text-color);
    font-size: 1rem;
    box-sizing: border-box;
  }

  input:focus, textarea:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
  }

  .status-message {
    margin-top: 1rem;
    color: #ff4444;
    font-size: 0.9rem;
    text-align: center;
  }

  /* Ton style de bouton existant */
  .button.primary {
    cursor: pointer;
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 8px;
    font-weight: bold;
    transition: opacity 0.2s;
  }

  .button.primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
</style>