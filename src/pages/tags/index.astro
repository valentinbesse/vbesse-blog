---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())].filter(Boolean);
---

<Layout title="Tous les sujets">
  <section class="tags-index">
    <h1>Sujets explor√©s</h1>
    
    <div class="tags-cloud">
      {tags.map((tag) => (
        <a href={`/tags/${tag}`} class="tag-pill">#{tag}</a>
      ))}
    </div>
  </section>
</Layout>

<style>
  .tags-index { max-width: 800px; margin: 0 auto; padding: 2rem 1rem; text-align: center; }
  
  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .tag-pill {
    background: #f3f4f6;
    color: #333;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    border: 1px solid #ddd;
    transition: all 0.2s ease;
  }

  .tag-pill:hover {
    background: #0070f3;
    color: white;
    border-color: #0070f3;
    transform: translateY(-2px);
  }
</style>