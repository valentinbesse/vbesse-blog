---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
    <article class="blog-post">
        {
            frontmatter.image && (
                <figure class="hero-figure">
                    <Image
                        src={frontmatter.image}
                        alt={frontmatter.imageAlt || frontmatter.title}
                        class="hero-image"
                        format="webp"
                    />

                    {frontmatter.imageCaption && (
                        <figcaption class="hero-caption">
                            {frontmatter.imageCaption}
                        </figcaption>
                    )}
                </figure>
            )
        }

        <header class="post-header">
            <h1 class="post-title">{frontmatter.title}</h1>
            <p class="post-date">Publié le {frontmatter.pubDate}</p>
        </header>

        <div class="post-content">
            <slot />
        </div>

        {
            frontmatter.aiDisclaimer && (
                <footer class="post-footer">
                    {frontmatter.tags && (
                        <div class="post-tags">
                            {frontmatter.tags.map((tag) => (
                                <a href={`/tags/${tag}`} class="tag-link">
                                    #{tag}
                                </a>
                            ))}
                        </div>
                    )}
                    <p class="ai-note">✨ {frontmatter.aiDisclaimer}</p>
                </footer>
            )
        }
    </article>
</Layout>

<style>
    /* ... Tes styles existants ... */
    .hero-figure {
        margin: 0 0 2rem 0;
    }

    .hero-image {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        display: block;
    }

    .hero-caption {
        font-size: 0.85rem;
        color: #888;
        text-align: center;
        margin-top: 0.5rem;
        font-style: italic;
    }

    .post-title {
        font-size: 2.5rem;
        line-height: 1.2;
        margin-bottom: 0.5rem;
        color: var(--text-color);
    }

    .post-date {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 2rem;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 3rem;
    }

    .post-content img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 2rem auto;
        border-radius: 8px;
    }

    .post-footer {
        border-top: 1px solid #eee;
        padding-top: 1rem;
        margin-top: 2rem;
    }

    .post-tags {
        display: flex;
        gap: 0.5rem;
        margin: 1rem 0;
    }
    
    .tag-link {
        color: #0070f3;
        font-size: 0.9rem;
        text-decoration: none;
        background: rgba(0, 112, 243, 0.1); /* Bleu très léger */
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        transition: background 0.2s;
    }

    .tag-link:hover {
        background: rgba(0, 112, 243, 0.2);
    }

    .ai-note {
        font-size: 0.85rem;
        color: #888;
        font-style: italic;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    :global(.ai-prompt) {
        background-color: #f3f4f6;
        border-left: 4px solid #0070f3;
        padding: 1.5rem;
        margin: 2rem 0;
        border-radius: 0 8px 8px 0;
        font-family: "Courier New", Courier, monospace;
        font-size: 0.95rem;
        color: #333;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    :global(.ai-prompt ul) {
        margin-left: 1.5rem;
        margin-top: 0.5rem;
    }

    :global(.ai-prompt strong) {
        color: #0070f3;
    }
</style>
