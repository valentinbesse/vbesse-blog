---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
    
    <article class="blog-post">
        {frontmatter.image && (
            <figure class="hero-figure">
                <img 
                    src={frontmatter.image} 
                    alt={frontmatter.imageAlt || frontmatter.title} 
                    class="hero-image" 
                />
                {frontmatter.imageCaption && (
                    <figcaption class="hero-caption">
                        {frontmatter.imageCaption}
                    </figcaption>
                )}
            </figure>
        )}

        <header class="post-header">
            <h1 class="post-title">{frontmatter.title}</h1>
            <p class="post-date">Publié le {frontmatter.pubDate}</p>
        </header>

        <div class="post-content">
            <slot />
        </div>

        {frontmatter.aiDisclaimer && (
            <footer class="post-footer">
                <p class="ai-note">✨ {frontmatter.aiDisclaimer}</p>
            </footer>
        )}
    </article>

</Layout>

<style>
    /* ... Tes styles existants ... */
    .hero-figure { margin: 0 0 2rem 0; }
    
    .hero-image {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        display: block;
    }

    .hero-caption {
        font-size: 0.85rem;
        color: #888;
        text-align: center;
        margin-top: 0.5rem;
        font-style: italic;
    }

    .post-title {
        font-size: 2.5rem;
        line-height: 1.2;
        margin-bottom: 0.5rem;
        color: var(--text-color);
    }

    .post-date {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 2rem;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 3rem;
    }

    .post-footer {
        border-top: 1px solid #eee;
        padding-top: 1rem;
        margin-top: 2rem;
    }

    .ai-note {
        font-size: 0.85rem;
        color: #888;
        font-style: italic;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>