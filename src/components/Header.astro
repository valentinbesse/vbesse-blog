---
// src/components/Header.astro
const { pathname } = Astro.url;
const isActive = (href) => {
    return href === pathname || href === pathname.replace(/\/$/, "");
};
---

<header>
    <nav>
        <a href="/" class="logo">
            <img src="/favicon-96x96.png" alt="Logo de vbesse.com" />
            <span class="logo-text">vbesse.com</span>
        </a>

        <div class="actions">
            <button id="theme-toggle" aria-label="Changer le thème">
                <svg
                    class="sun"
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><circle cx="12" cy="12" r="5"></circle><line
                        x1="12"
                        y1="1"
                        x2="12"
                        y2="3"></line><line x1="12" y1="21" x2="12" y2="23"
                    ></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"
                    ></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
                    ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
                        x1="21"
                        y1="12"
                        x2="23"
                        y2="12"></line><line
                        x1="4.22"
                        y1="19.78"
                        x2="5.64"
                        y2="18.36"></line><line
                        x1="18.36"
                        y1="5.64"
                        x2="19.78"
                        y2="4.22"></line></svg
                >

                <svg
                    class="moon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                    ></path></svg
                >
            </button>
        </div>

        <button id="menu-toggle" aria-label="Menu" aria-expanded="false">
            <svg
                class="icon-menu"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="3" y1="12" x2="21" y2="12"></line><line
                    x1="3"
                    y1="6"
                    x2="21"
                    y2="6"></line><line x1="3" y1="18" x2="21" y2="18"
                ></line></svg
            >
            <svg
                class="icon-close"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="18" y1="6" x2="6" y2="18"></line><line
                    x1="6"
                    y1="6"
                    x2="18"
                    y2="18"></line></svg
            >
        </button>

        <div class="nav-links">
            <a href="/" class={isActive("/") ? "active" : ""}>Accueil</a>
            <a href="/blog" class={isActive("/blog") ? "active" : ""}>Blog</a>
            <a href="/tags" class={isActive("/tags") ? "active" : ""}>Sujets</a>
            <a href="/about" class={isActive("/about") ? "active" : ""}
                >À propos</a
            >
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const navLinks = document.querySelector(".nav-links");

    if (menuToggle && navLinks) {
        menuToggle.addEventListener("click", () => {
            const isExpanded =
                menuToggle.getAttribute("aria-expanded") === "true";
            menuToggle.setAttribute("aria-expanded", !isExpanded);
            navLinks.classList.toggle("expanded");
            menuToggle.classList.toggle("open");
        });
    }
</script>

<style>
    header {
        margin: 0;
        padding: 0 1em;
        background-color: var(--secondary-bg);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 100;
        transition: background-color 0.3s ease;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--text-color);
        font-weight: bold;
    }

    .logo img {
        display: block;
        width: 32px;
        height: 32px;
        object-fit: contain;
    }

    .logo-text {
        font-weight: bold;
        font-size: 1.5rem;
        color: var(--text-color);
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-links a {
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        transition: color 0.2s;
        border-bottom: 2px solid transparent;
    }

    .nav-links a:hover,
    .nav-links a.active {
        color: var(--accent-color); /* Ton bleu électrique */
        border-bottom-color: var(--accent-color);
    }

    /* --- MOBILE --- */
    #menu-toggle {
        display: none; /* Caché par défaut */
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
    }

    /* Icones du burger */
    .icon-close {
        display: none;
    }
    #menu-toggle.open .icon-menu {
        display: none;
    }
    #menu-toggle.open .icon-close {
        display: block;
    }

    @media (max-width: 768px) {
        #menu-toggle {
            display: flex; /* Visible sur mobile */
            align-items: center;
            justify-content: center;
        }

        .nav-links {
            display: none; /* Caché par défaut sur mobile */
            position: absolute;
            top: 100%; /* Juste en dessous du header */
            left: 0;
            right: 0;
            background: white;
            flex-direction: column;
            align-items: center;
            padding: 2rem;
            gap: 1.5rem;
            border-bottom: 1px solid #eee;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .nav-links.expanded {
            display: flex; /* Magie JavaScript */
        }

        .nav-links a {
            font-size: 1.2rem;
            width: 100%;
            text-align: center;
            padding: 0.5rem 0;
        }
    }

    .actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    #theme-toggle {
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-color);
        padding: 0.5rem;
        border-radius: 50%;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #theme-toggle:hover {
        background-color: var(--secondary-bg);
    }

    /* Logique d'affichage des icônes */
    /* Par défaut (Light) : On cache le soleil, on montre la lune */
    .sun { display: none; }
    .moon { display: block; }

    /* En mode Dark (grâce au parent html.dark) : On inverse */
    :global(html.dark) .sun { display: block; }
    :global(html.dark) .moon { display: none; }

</style>

<script>
    const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    document.getElementById("theme-toggle")?.addEventListener("click", handleToggleClick);
</script>
