---
// src/components/Header.astro
import Search from "./Search.astro";

const { pathname } = Astro.url;
const isActive = (href) => {
    return href === pathname || href === pathname.replace(/\/$/, "");
};
---

<header transition:persist>
    <nav>
        <a href="/" class="logo">
            <img src="/favicon-96x96.png" alt="Logo de vbesse.com" />
            <span class="logo-text">vbesse.com</span>
        </a>

        <div class="actions">
            <button id="theme-toggle" aria-label="Changer le thème">
                <svg
                    class="sun"
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><circle cx="12" cy="12" r="5"></circle><line
                        x1="12"
                        y1="1"
                        x2="12"
                        y2="3"></line><line x1="12" y1="21" x2="12" y2="23"
                    ></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"
                    ></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
                    ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
                        x1="21"
                        y1="12"
                        x2="23"
                        y2="12"></line><line
                        x1="4.22"
                        y1="19.78"
                        x2="5.64"
                        y2="18.36"></line><line
                        x1="18.36"
                        y1="5.64"
                        x2="19.78"
                        y2="4.22"></line></svg
                >

                <svg
                    class="moon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                    ></path></svg
                >
            </button>
            <Search />
        </div>

        <button id="menu-toggle" aria-label="Menu" aria-expanded="false">
            <svg
                class="icon-menu"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="3" y1="12" x2="21" y2="12"></line><line
                    x1="3"
                    y1="6"
                    x2="21"
                    y2="6"></line><line x1="3" y1="18" x2="21" y2="18"
                ></line></svg
            >
            <svg
                class="icon-close"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="18" y1="6" x2="6" y2="18"></line><line
                    x1="6"
                    y1="6"
                    x2="18"
                    y2="18"></line></svg
            >
        </button>

        <div class="nav-links">
            <a href="/" class={isActive("/") ? "active" : ""}>Accueil</a>
            <a href="/blog" class={isActive("/blog") ? "active" : ""}>Blog</a>
            <a href="/tags" class={isActive("/tags") ? "active" : ""}>Sujets</a>
            <a href="/about" class={isActive("/about") ? "active" : ""}
                >À propos</a
            >
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const navLinks = document.querySelector(".nav-links");

    if (menuToggle && navLinks) {
        menuToggle.addEventListener("click", () => {
            const isExpanded =
                menuToggle.getAttribute("aria-expanded") === "true";
            menuToggle.setAttribute("aria-expanded", !isExpanded);
            navLinks.classList.toggle("expanded");
            menuToggle.classList.toggle("open");
        });
    }
</script>

<style>
    header {
        margin: 0;
        padding: 0 1em;
        background-color: var(--secondary-bg);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 100;
        width: 100%;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--text-color);
        font-weight: bold;
    }

    .logo img {
        display: block;
        width: 32px;
        height: 32px;
        object-fit: contain;
    }

    .logo-text {
        font-weight: bold;
        font-size: 1.5rem;
        color: var(--text-color);
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-links a {
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        transition: color 0.2s;
        border-bottom: 2px solid transparent;
    }

    .nav-links a:hover,
    .nav-links a.active {
        color: var(--accent-color); /* Ton bleu électrique */
        border-bottom-color: var(--accent-color);
    }

    /* --- MOBILE --- */
    #menu-toggle {
        display: none; /* Caché par défaut */
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
    }

    /* Icones du burger */
    .icon-close {
        display: none;
    }
    #menu-toggle.open .icon-menu {
        display: none;
    }
    #menu-toggle.open .icon-close {
        display: block;
    }

    @media (max-width: 768px) {
        #menu-toggle {
            display: flex; /* Visible sur mobile */
            align-items: center;
            justify-content: center;
        }

        .nav-links {
            display: none; /* Caché par défaut sur mobile */
            position: absolute;
            top: 100%; /* Juste en dessous du header */
            left: 0;
            right: 0;
            background: var(--bg-color);
            border-bottom: 1px solid var(--border-color);
            flex-direction: column;
            align-items: center;
            padding: 2rem;
            gap: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .nav-links.expanded {
            display: flex; /* Magie JavaScript */
        }

        .nav-links a {
            font-size: 1.2rem;
            width: 100%;
            text-align: center;
            padding: 0.5rem 0;
        }
    }

    .actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    #theme-toggle {
        background: none;
        border: none;
        border-right: 1px solid var(--action-border-color);
        border-right-color: var(--action-border-color);
        padding-right: 1rem;
        cursor: pointer;
        color: var(--text-color);
        border-radius: 0;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #theme-toggle:hover {
        background-color: var(--secondary-bg);
    }

    /* Logique d'affichage des icônes */
    /* Par défaut (Light) : On cache le soleil, on montre la lune */
    .sun {
        display: none;
    }
    .moon {
        display: block;
    }

    /* En mode Dark (grâce au parent html.dark) : On inverse */
    :global(html.dark) .sun {
        display: block;
    }
    :global(html.dark) .moon {
        display: none;
    }
</style>

<script>
    function init() {
        // --- 1. GESTION DU MENU MOBILE ---
        const menuToggle = document.getElementById("menu-toggle");
        const navLinksContainer = document.querySelector(".nav-links");

        // Fonction pour fermer le menu proprement
        const closeMenu = () => {
            if (menuToggle && navLinksContainer) {
                menuToggle.setAttribute("aria-expanded", "false");
                menuToggle.classList.remove("open");
                navLinksContainer.classList.remove("expanded");
            }
        };

        // Nettoyage des anciens listeners pour éviter les doublons (Header persistant)
        const newMenuToggle = menuToggle?.cloneNode(true);
        if (menuToggle && newMenuToggle && menuToggle.parentNode) {
            menuToggle.parentNode.replaceChild(newMenuToggle, menuToggle);

            newMenuToggle.addEventListener("click", () => {
                const isExpanded =
                    newMenuToggle.getAttribute("aria-expanded") === "true";
                newMenuToggle.setAttribute("aria-expanded", !isExpanded);
                navLinksContainer?.classList.toggle("expanded");
                newMenuToggle.classList.toggle("open");
            });
        }

        // --- 2. GESTION DES LIENS ACTIFS (SOULIGNEMENT) ---
        const navLinks = document.querySelectorAll(".nav-links a");
        const currentPath = window.location.pathname.replace(/\/$/, ""); // On enlève le slash de fin pour comparer

        navLinks.forEach((link) => {
            link.classList.remove("active");
            const href = link.getAttribute("href")?.replace(/\/$/, "");

            // Logique de correspondance (Exacte ou "commence par" pour les sous-pages du blog)
            if (
                href === currentPath ||
                (href !== "" && href !== "/" && currentPath.startsWith(href))
            ) {
                link.classList.add("active");
            }
        });

        // --- 3. GESTION DU DARK MODE (TOGGLE) ---
        const themeToggle = document.getElementById("theme-toggle");

        // Nettoyage listener (cloneNode astuce)
        const newThemeToggle = themeToggle?.cloneNode(true);
        if (themeToggle && newThemeToggle && themeToggle.parentNode) {
            themeToggle.parentNode.replaceChild(newThemeToggle, themeToggle);

            newThemeToggle.addEventListener("click", () => {
                const element = document.documentElement;
                element.classList.toggle("dark");

                const isDark = element.classList.contains("dark");
                localStorage.setItem("theme", isDark ? "dark" : "light");
            });
        }

        // --- 4. FORCE LE DARK MODE APRÈS NAVIGATION ---
        const theme = localStorage.getItem("theme");
        if (theme === "dark") {
            document.documentElement.classList.add("dark");
        }

        // --- 5. FORCER LA FERMETURE APRÈS NAVIGATION ---
        document.addEventListener("astro:after-swap", closeMenu, {
            once: true,
        });
    }

    // On lance la fonction à chaque navigation (y compris la première)
    document.addEventListener("astro:page-load", init);
</script>

